# Helium10 MCP-Server - Beispiel für Umgebungsvariablen
# Kopieren Sie diese Datei nach .env und passen Sie die Werte an

# GitHub-Token für Repository-Verwaltung
GITHUB_TOKEN=your_github_token_here

# Helium10 API-Konfiguration
HELIUM10_API_KEY=your_helium10_api_key
HELIUM10_API_SECRET=your_helium10_api_secret
HELIUM10_API_BASE_URL=https://api.helium10.com/v2

# Amazon API-Konfiguration
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_ASSOCIATE_TAG=your_amazon_associate_tag

# Datenbank-Konfiguration
DB_PATH=./data/helium10.db

# Cache-Konfiguration
CACHE_DIR=./.cache
CACHE_MAX_AGE=86400000

# Backup-Konfiguration
BACKUP_DIR=./backups
MAX_BACKUPS=10

# Sicherheitsschlüssel
# Lassen Sie diesen Wert leer, um einen zufälligen Schlüssel zu generieren
ENCRYPTION_KEY=

# Python und LLM-Konfiguration
PYTHON_PATH=python3
LLM_MODELS_DIR=./models/llm
LLM_MODEL_NAME=unsloth/DeepSeek-R1-Distill-Llama-8B
LLM_DEFAULT_MAX_LENGTH=200
LLM_DEFAULT_TEMPERATURE=0.7
