# NPM-Konfiguration f端r den Helium10 MCP-Server

# Verwende genaue Versionen f端r konsistente Builds
save-exact=true

# Bevorzuge lokalen Cache f端r Offline-Entwicklung
prefer-offline=true

# Offline-Modus aktivieren, wenn keine Verbindung besteht
offline-strategy=dynamic

# Verwende saubere Installation ohne Legacy-Peer-Dependencies
legacy-peer-deps=false

# Ignoriere Skripte bei NPM-Installationen f端r mehr Sicherheit
ignore-scripts=false

# Verwende strikte SSL-Validierung
strict-ssl=true

# Cache-Konfiguration
cache-min=3600
